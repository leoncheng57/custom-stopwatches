extends layout

//- Mixins
mixin playIcon 
    svg#play.icon(xmlns='http://www.w3.org/2000/svg' viewbox='0 0 24 24')
        path(d='M0 0h24v24H0z' fill='none')
        path(d='M8 5v14l11-7z')

mixin pauseIcon 
    svg#pause.icon(xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24")
        path(d="M0 0h24v24H0z" fill="none")
        path(d="M6 19h4V5H6v14zm8-14v14h4V5h-4z")

mixin resetIcon 
    svg#reset.icon(xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24")
        path(d="M0 0h24v24H0z" fill="none")
        path(d="M12 5V1L7 6l5 5V7c3.31 0 6 2.69 6 6s-2.69 6-6 6-6-2.69-6-6H4c0 4.42 3.58 8 8 8s8-3.58 8-8-3.58-8-8-8z")

mixin deleteIcon
    svg(xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24")
      path(d="M0 0h24v24H0z" fill="none")
      path(d="M7 11v2h10v-2H7zm5-9C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8z")


mixin singleTimer(cn, name)
    div(class=cn)
        p.title= name 
        p.displayTime 00:00:00
        div.deleteIcon
            +deleteIcon


//- HTML
block content
    div#outer
        div#hero
            div#bigtimer
                div.numeric 
                    p#bigtimer-text 12:34:56
                div.controls
                    +playIcon
                    +pauseIcon
                    +resetIcon
        div#sidebar
            div#timerbank
                +singleTimer("hidden-stopwatch","template-stopwatch")
            div#modal.invisible
                div#modalContent
                    div#modalTitle
                        input(placeholder="Title", name="Title", type="text")
                    div#modalTime
                        input(placeholder="Hrs", name="Hrs", type="number")
                        span : 
                        input(placeholder="Mins", name="Mins", type="number")
                        span : 
                        input(placeholder="Secs", name="Secs", type="number")
                    div#modalButton 
                        button Add
                    div#closeModal.deleteIcon 
                        +deleteIcon
            div#footing
                a#copyright(href="http://leoncheng.dev/") Â© 2020, Leon Cheng
