extends layout

mixin container(cn, name)
    div(class=cn)
        p.title= name 
        p.displayTime 00:00:00
        button.start Start
        button.stop Stop
        button.reset Reset


block content
    div#header Custom Stopwatches
    div#wrapper
        +container("hidden-stopwatch","template-stopwatch")
        +container("regular-stopwatch", "Stopwatch #1")
